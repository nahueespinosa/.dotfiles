#!/usr/bin/env bash

# Common packages I usually have to install on Ubuntu
# I wanted to keep this separate from other scripts as it requires root access.

sudo apt-get update
sudo apt-get install -y --no-install-recommends \
  build-essential \
  curl \
  docker \
  git \
  htop \
  mesa-utils \
  ncdu \
  tmux \
  vim \
  zsh
