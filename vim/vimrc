" Syntax and colors
syntax on
colorscheme monokai
set number
set ruler
set cursorline
set showmatch
set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey

" Editing
set autoindent
set smartindent
set expandtab
set shiftwidth=2
set tabstop=2 softtabstop=2
set smarttab
set nowrap

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase
nnoremap <CR> :noh<CR><CR> " Hit return remove highlight after search

" Misc
set noerrorbells
set novisualbell
set nobackup
set noswapfile
set laststatus=2
